<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="30.0"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.zyphenvisuals.tweeter.views.Login"
      prefHeight="720.0" prefWidth="1280.0">

    <Text styleClass="title-1, text, accent">
        Tweeter
    </Text>

    <VBox alignment="CENTER_LEFT" spacing="10.0" maxWidth="300.0">

        <Label text="Username"/>
        <TextField fx:id="usernameInput" styleClass="rounded" />

        <Label text="Password"/>
        <PasswordField fx:id="passwordInput" styleClass="rounded" />

    </VBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Register" styleClass="rounded"/>
        <Button text="Login" styleClass="accent, rounded"/>
    </HBox>
</VBox>
